{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "viewer-for-slack",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "scope": ["https://script.google.com/macros/s/*"]
      },
      "fs": {
        "writeFile": true,
        "scope": ["**", "**/*", "/**/*"]
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "net.aruse.viewer-for-slack",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 768,
        "resizable": true,
        "title": "Viewer for Slack",
        "width": 1024
      }
    ]
  }
}
